@model IEnumerable<ControleDeContatos.Models.OrcamentoModel>

@{
    ViewData["Title"] = "Orçamentos";
}

<style>
    .orcamentos-header {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 20px 30px;
        border-radius: 10px 10px 0 0;
        margin-bottom: 0;
    }
    
    .orcamentos-container {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        overflow: hidden;
        margin: 0 15px;
    }
    
    .search-section {
        background: #f8f9fa;
        padding: 20px 30px;
        border-bottom: 1px solid #e9ecef;
    }
    
    .search-input {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }
    
    .search-input:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
    }
    
    .orcamento-count {
        background: #28a745;
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 500;
        font-size: 14px;
    }
    
    .table-container {
        padding: 0;
        overflow-x: auto;
    }
    
    .table {
        margin-bottom: 0;
        min-width: 800px;
    }
    
    .table th {
        border: none;
        padding: 15px 10px;
        font-weight: 600;
        color: #495057;
        background: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        white-space: nowrap;
    }
    
    .table td {
        padding: 15px 10px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f3f4;
        white-space: nowrap;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }
    
    .numero-orcamento-badge {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        color: white;
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 14px;
        letter-spacing: 1px;
    }
    
    .status-badge {
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
    }
    
    .status-pendente { background: #fff3cd; color: #856404; }
    .status-aprovado { background: #d4edda; color: #155724; }
    .status-rejeitado { background: #f8d7da; color: #721c24; }
    .status-convertido { background: #d1ecf1; color: #0c5460; }
    
    .action-buttons {
        display: flex;
        gap: 5px;
        flex-wrap: wrap;
    }
    
    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
        transition: all 0.3s ease;
    }
    
    .btn-view {
        background: #17a2b8;
        color: white;
    }
    
    .btn-view:hover {
        background: #138496;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(23, 162, 184, 0.3);
    }
    
    .btn-edit {
        background: #007bff;
        color: white;
    }
    
    .btn-edit:hover {
        background: #0056b3;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
    }
    
    .btn-approve {
        background: #28a745;
        color: white;
    }
    
    .btn-approve:hover {
        background: #218838;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
    }
    
    .btn-reject {
        background: #dc3545;
        color: white;
    }
    
    .btn-reject:hover {
        background: #c82333;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }
    
    .btn-convert {
        background: #ffc107;
        color: #212529;
    }
    
    .btn-convert:hover {
        background: #e0a800;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
    }
    
    .btn-delete {
        background: #6c757d;
        color: white;
    }
    
    .btn-delete:hover {
        background: #5a6268;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
    }
    
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }
    
    .empty-state h5 {
        font-size: 24px;
        margin-bottom: 10px;
        color: #495057;
    }
    
    .empty-state p {
        font-size: 16px;
        margin-bottom: 0;
    }
    
    .btn-novo-orcamento {
        background: white;
        color: #28a745;
        border: 2px solid white;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-novo-orcamento:hover {
        background: transparent;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255,255,255,0.3);
    }
    
    .pagination-info {
        background: #f8f9fa;
        padding: 15px 30px;
        border-top: 1px solid #e9ecef;
        color: #6c757d;
        font-size: 14px;
    }
    
    .form-select-sm {
        width: auto;
        min-width: 80px;
    }
    
    /* Esconder elementos do DataTable */
    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_info,
    .dataTables_wrapper .dataTables_paginate {
        display: none !important;
    }
</style>

<div class="orcamentos-container">
    <!-- Header Verde -->
    <div class="orcamentos-header">
        <div class="row align-items-center">
            <div class="col">
                <h4 class="mb-0">Orçamentos</h4>
            </div>
            <div class="col-auto">
                <a asp-action="Criar" class="btn btn-novo-orcamento">
                    Novo Orçamento
                </a>
            </div>
        </div>
    </div>

    <!-- Seção de Busca -->
    <div class="search-section">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="text" id="searchInput" class="form-control search-input" 
                           placeholder="Buscar por número do orçamento, cliente ou veículo...">
                </div>
            </div>
            <div class="col-md-4 text-end">
                <span class="orcamento-count">
                    @Model.Count() Orçamento(s)
                </span>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <label class="me-2 text-muted">Exibir:</label>
                    <select class="form-select form-select-sm" id="pageSizeSelect">
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <span class="ms-2 text-muted">resultados por página</span>
                </div>
            </div>
            <div class="col-md-6 text-end">
                <button class="btn btn-success" id="searchBtn">
                    Pesquisar
                </button>
            </div>
        </div>
    </div>

    <!-- Tabela -->
    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="orcamentosTable">
                <thead>
                    <tr>
                        <th>Nº Orçamento</th>
                        <th>Cliente</th>
                        <th>Veículo</th>
                        <th>Descrição</th>
                        <th>Valor Total</th>
                        <th>Status</th>
                        <th>Data Criação</th>
                        <th width="200">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orcamento in Model)
                    {
                        <tr>
                            <td>
                                <span class="numero-orcamento-badge">@orcamento.NumeroOrcamento</span>
                                @if (!orcamento.Ativo)
                                {
                                    <span class="status-badge status-rejeitado ms-2">Inativo</span>
                                }
                            </td>
                            <td>
                                <div>
                                    <strong class="text-dark">@orcamento.Cliente?.Nome</strong>
                                </div>
                                <small class="text-muted">@orcamento.Cliente?.Telefone</small>
                            </td>
                            <td>
                                <div>
                                    <strong class="text-dark">@orcamento.Veiculo?.Placa</strong>
                                </div>
                                <small class="text-muted">@orcamento.Veiculo?.Marca @orcamento.Veiculo?.Modelo</small>
                            </td>
                            <td>
                                @if (orcamento.Descricao?.Length > 50)
                                {
                                    <span title="@orcamento.Descricao">@orcamento.Descricao.Substring(0, 50)...</span>
                                }
                                else
                                {
                                    @orcamento.Descricao
                                }
                            </td>
                            <td>
                                <span class="badge bg-success">R$ @orcamento.ValorTotal.ToString("N2")</span>
                            </td>
                            <td>
                                @{
                                    var statusClass = orcamento.Status switch
                                    {
                                        "Pendente" => "status-pendente",
                                        "Aprovado" => "status-aprovado",
                                        "Rejeitado" => "status-rejeitado",
                                        "Convertido em OS" => "status-convertido",
                                        _ => "status-pendente"
                                    };
                                }
                                <span class="status-badge @statusClass">@orcamento.Status</span>
                            </td>
                            <td>@orcamento.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Visualizar" asp-route-id="@orcamento.Id" 
                                       class="btn-action btn-view" title="Visualizar">
                                        👁️
                                    </a>
                                    <a asp-action="Editar" asp-route-id="@orcamento.Id" 
                                       class="btn-action btn-edit" title="Editar">
                                        ✎
                                    </a>
                                    @if (orcamento.Status == "Pendente")
                                    {
                                        <form asp-action="Aprovar" asp-route-id="@orcamento.Id" method="post" style="display: inline;">
                                            <button type="submit" class="btn-action btn-approve" title="Aprovar"
                                                    onclick="return confirm('Confirmar aprovação do orçamento?')">
                                                ✅
                                            </button>
                                        </form>
                                        <form asp-action="Rejeitar" asp-route-id="@orcamento.Id" method="post" style="display: inline;">
                                            <button type="submit" class="btn-action btn-reject" title="Rejeitar"
                                                    onclick="return confirm('Confirmar rejeição do orçamento?')">
                                                ❌
                                            </button>
                                        </form>
                                        <form asp-action="ConverterEmOS" asp-route-id="@orcamento.Id" method="post" style="display: inline;">
                                            <button type="submit" class="btn-action btn-convert" title="Converter em OS"
                                                    onclick="return confirm('Converter orçamento em Ordem de Serviço?')">
                                                🔄
                                            </button>
                                        </form>
                                    }
                                    <a asp-action="ApagarConfirmacao" asp-route-id="@orcamento.Id" 
                                       class="btn-action btn-delete" title="Excluir">
                                        ×
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="empty-state">
                <h5>Nenhum orçamento cadastrado</h5>
                <p>Clique em 'Novo Orçamento' para começar</p>
            </div>
        }
    </div>

    <!-- Informações de Paginação -->
    <div class="pagination-info">
        <div class="row align-items-center">
            <div class="col-md-6">
                Mostrando 0 até 0 de 0 registro(s)
            </div>
            <div class="col-md-6 text-end">
                <a href="#" class="text-muted me-3">Anterior</a>
                <a href="#" class="text-muted">Próximo</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializar DataTable com configurações personalizadas
            var table = $('#orcamentosTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
                },
                pageLength: 25,
                order: [[6, 'desc']], // Ordenar por data de criação (decrescente)
                columnDefs: [
                    { orderable: false, targets: 7 } // Coluna de ações não ordenável
                ],
                dom: 't', // Apenas a tabela, sem controles
                searching: false, // Desabilitar busca padrão
                paging: false, // Desabilitar paginação padrão
                info: false // Desabilitar informações padrão
            });

            // Busca personalizada
            $('#searchInput').on('keyup', function() {
                table.search(this.value).draw();
            });

            // Botão de pesquisa
            $('#searchBtn').click(function() {
                table.search($('#searchInput').val()).draw();
            });

            // Alterar tamanho da página
            $('#pageSizeSelect').change(function() {
                table.page.len($(this).val()).draw();
            });

            // Tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
