@model ControleDeContatos.Models.OrdemServicoModel

@{
    ViewData["Title"] = "Editar Ordem de Serviço";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="mb-0">
                                <i class="fas fa-clipboard-list"></i> ✏️ Editar Ordem de Serviço
                            </h4>
                        </div>
                        <div class="col-auto">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="DataAbertura" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NumeroOS" class="form-label">
                                        <i class="fas fa-hashtag"></i> Número da OS
                                    </label>
                                    <input asp-for="NumeroOS" class="form-control" readonly>
                                    <span asp-validation-for="NumeroOS" class="text-danger"></span>
                                    <small class="form-text text-muted">Número da OS não pode ser alterado</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">
                                        <i class="fas fa-tasks"></i> Status
                                    </label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="">Selecione o status</option>
                                        <option value="Aberta">Aberta</option>
                                        <option value="Em Andamento">Em Andamento</option>
                                        <option value="Finalizada">Finalizada</option>
                                        <option value="Cancelada">Cancelada</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ClienteId" class="form-label">
                                        <i class="fas fa-user"></i> Cliente
                                    </label>
                                    <select asp-for="ClienteId" class="form-select" id="clienteSelect">
                                        <option value="">Selecione o cliente</option>
                                        @foreach (var cliente in ViewBag.Clientes)
                                        {
                                            if (cliente.Id == Model.ClienteId)
                                            {
                                                <option value="@cliente.Id" selected>
                                                    @cliente.Nome - @cliente.Telefone
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@cliente.Id">
                                                    @cliente.Nome - @cliente.Telefone
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="VeiculoId" class="form-label">
                                        <i class="fas fa-car"></i> Veículo
                                    </label>
                                    <select asp-for="VeiculoId" class="form-select" id="veiculoSelect">
                                        <option value="">Selecione o veículo</option>
                                    </select>
                                    <span asp-validation-for="VeiculoId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label">
                                <i class="fas fa-clipboard"></i> Descrição do Serviço
                            </label>
                            <textarea asp-for="Descricao" class="form-control" rows="4" 
                                      placeholder="Descreva detalhadamente o serviço a ser realizado..."></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Valor" class="form-label">
                                        <i class="fas fa-dollar-sign"></i> Valor (R$)
                                    </label>
                                    <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0.01" 
                                           placeholder="0,00" value="@Model.Valor.ToString("F2")">
                                    <span asp-validation-for="Valor" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Mecanico" class="form-label">
                                        <i class="fas fa-user-cog"></i> Mecânico
                                    </label>
                                    <input asp-for="Mecanico" class="form-control" 
                                           placeholder="Nome do mecânico">
                                    <span asp-validation-for="Mecanico" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="DataInicio" class="form-label">
                                        <i class="fas fa-calendar"></i> Data de Início (Opcional)
                                    </label>
                                    <input asp-for="DataInicio" class="form-control" type="datetime-local">
                                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="DataFinalizacao" class="form-label">
                                        <i class="fas fa-calendar-check"></i> Data de Finalização (Opcional)
                                    </label>
                                    <input asp-for="DataFinalizacao" class="form-control" type="datetime-local">
                                    <span asp-validation-for="DataFinalizacao" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observacoes" class="form-label">
                                <i class="fas fa-sticky-note"></i> Observações (Opcional)
                            </label>
                            <textarea asp-for="Observacoes" class="form-control" rows="3" 
                                      placeholder="Observações adicionais..."></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Atualizar OS
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Remover máscara que estava causando problema com valores

            // Carregar veículos quando cliente for selecionado
            $('#clienteSelect').change(function() {
                var clienteId = $(this).val();
                var veiculoSelect = $('#veiculoSelect');
                var veiculoIdAtual = @(Model.VeiculoId);
                
                veiculoSelect.empty();
                veiculoSelect.append('<option value="">Selecione o veículo</option>');
                
                if (clienteId) {
                    $.get('/OrdemServico/BuscarVeiculosPorCliente', { clienteId: clienteId }, function(veiculos) {
                        veiculos.forEach(function(veiculo) {
                            var selected = veiculo.id == veiculoIdAtual ? 'selected' : '';
                            veiculoSelect.append('<option value="' + veiculo.id + '" ' + selected + '>' + 
                                veiculo.placa + ' - ' + veiculo.marca + ' ' + veiculo.modelo + '</option>');
                        });
                    });
                }
            });

            // Carregar veículos do cliente atual na inicialização
            var clienteIdAtual = @(Model.ClienteId);
            if (clienteIdAtual) {
                $('#clienteSelect').trigger('change');
            }

            // Validação do formulário
            $('form').submit(function() {
                var clienteId = $('#clienteSelect').val();
                var veiculoId = $('#veiculoSelect').val();
                var status = $('#Status').val();
                
                if (!clienteId) {
                    alert('Por favor, selecione um cliente.');
                    return false;
                }
                
                if (!veiculoId) {
                    alert('Por favor, selecione um veículo.');
                    return false;
                }
                
                if (!status) {
                    alert('Por favor, selecione um status.');
                    return false;
                }
                
                return true;
            });
        });
    </script>
}
