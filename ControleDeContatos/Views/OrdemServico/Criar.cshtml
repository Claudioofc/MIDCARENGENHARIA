@model ControleDeContatos.Models.OrdemServicoModel

@{
    ViewData["Title"] = "Nova Ordem de Servi√ßo";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="mb-0">
                                <i class="fas fa-clipboard-list"></i> üìã Nova Ordem de Servi√ßo
                            </h4>
                        </div>
                        <div class="col-auto">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Criar" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NumeroOS" class="form-label">
                                        <i class="fas fa-hashtag"></i> N√∫mero da OS
                                    </label>
                                    <input asp-for="NumeroOS" class="form-control" placeholder="Deixe em branco para gerar automaticamente">
                                    <span asp-validation-for="NumeroOS" class="text-danger"></span>
                                    <small class="form-text text-muted">Deixe em branco para gerar automaticamente (OS0001, OS0002, etc.)</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">
                                        <i class="fas fa-tasks"></i> Status
                                    </label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="">Selecione o status</option>
                                        <option value="Aberta">Aberta</option>
                                        <option value="Em Andamento">Em Andamento</option>
                                        <option value="Finalizada">Finalizada</option>
                                        <option value="Cancelada">Cancelada</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ClienteId" class="form-label">
                                        <i class="fas fa-user"></i> Cliente
                                    </label>
                                    <select asp-for="ClienteId" class="form-select" id="clienteSelect">
                                        <option value="">Selecione o cliente</option>
                                        @foreach (var cliente in ViewBag.Clientes)
                                        {
                                            <option value="@cliente.Id">@cliente.Nome - @cliente.Telefone</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="VeiculoId" class="form-label">
                                        <i class="fas fa-car"></i> Ve√≠culo
                                    </label>
                                    <select asp-for="VeiculoId" class="form-select" id="veiculoSelect">
                                        <option value="">Selecione o ve√≠culo</option>
                                    </select>
                                    <span asp-validation-for="VeiculoId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label">
                                <i class="fas fa-clipboard"></i> Descri√ß√£o do Servi√ßo
                            </label>
                            <textarea asp-for="Descricao" class="form-control" rows="4" 
                                      placeholder="Descreva detalhadamente o servi√ßo a ser realizado..."></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Valor" class="form-label">
                                        <i class="fas fa-dollar-sign"></i> Valor (R$)
                                    </label>
                                    <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0.01" 
                                           placeholder="0,00">
                                    <span asp-validation-for="Valor" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Mecanico" class="form-label">
                                        <i class="fas fa-user-cog"></i> Mec√¢nico
                                    </label>
                                    <input asp-for="Mecanico" class="form-control" value="Milton Diego" 
                                           placeholder="Nome do mec√¢nico">
                                    <span asp-validation-for="Mecanico" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="DataInicio" class="form-label">
                                        <i class="fas fa-calendar"></i> Data de In√≠cio (Opcional)
                                    </label>
                                    <input asp-for="DataInicio" class="form-control" type="datetime-local">
                                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observacoes" class="form-label">
                                <i class="fas fa-sticky-note"></i> Observa√ß√µes (Opcional)
                            </label>
                            <textarea asp-for="Observacoes" class="form-control" rows="3" 
                                      placeholder="Observa√ß√µes adicionais..."></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Salvar OS
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Remover m√°scara que estava causando problema com valores

            // Carregar ve√≠culos quando cliente for selecionado
            $('#clienteSelect').change(function() {
                var clienteId = $(this).val();
                var veiculoSelect = $('#veiculoSelect');
                
                veiculoSelect.empty();
                veiculoSelect.append('<option value="">Selecione o ve√≠culo</option>');
                
                if (clienteId) {
                    $.get('/OrdemServico/BuscarVeiculosPorCliente', { clienteId: clienteId }, function(veiculos) {
                        veiculos.forEach(function(veiculo) {
                            veiculoSelect.append('<option value="' + veiculo.id + '">' + 
                                veiculo.placa + ' - ' + veiculo.marca + ' ' + veiculo.modelo + '</option>');
                        });
                    });
                }
            });

            // Valida√ß√£o do formul√°rio
            $('form').submit(function() {
                var clienteId = $('#clienteSelect').val();
                var veiculoId = $('#veiculoSelect').val();
                var status = $('#Status').val();
                
                if (!clienteId) {
                    alert('Por favor, selecione um cliente.');
                    return false;
                }
                
                if (!veiculoId) {
                    alert('Por favor, selecione um ve√≠culo.');
                    return false;
                }
                
                if (!status) {
                    alert('Por favor, selecione um status.');
                    return false;
                }
                
                return true;
            });
        });
    </script>
}
